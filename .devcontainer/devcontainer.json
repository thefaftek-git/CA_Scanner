
{
    "name": "CA_Scanner Development Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-dotnettools.vscode-dotnet-runtime",
        "ms-dotnettools.csharp",
        "ms-azuretools.vscode-docker",
        "ms-vscode.cpptools"
    ],
    "postCreateCommand": "bash setup_development_environment.sh",
    "forwardPorts": [5000],
    "remoteUser": "vscode"
}

