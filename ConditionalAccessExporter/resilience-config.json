
{
  "Resilience": {
    "RetryPolicy": {
      "MaxRetryAttempts": 3,
      "BaseDelayMs": 1000,
      "MaxDelayMs": 30000,
      "BackoffMultiplier": 2.0,
      "UseJitter": true,
      "RetriableStatusCodes": [429, 500, 502, 503, 504]
    },
    "CircuitBreaker": {
      "FailureThreshold": 5,
      "DurationOfBreakSeconds": 60,
      "MinimumThroughput": 10,
      "SamplingDurationSeconds": 60
    },
    "RateLimiting": {
      "EnableAdaptiveRateLimiting": true,
      "MaxRequestsPerMinute": 600,
      "MaxConcurrentRequests": 10,
      "BufferPercentage": 0.8,
      "EnableRequestQueuing": true,
      "MaxQueueSize": 100
    },
    "Timeout": {
      "RequestTimeoutSeconds": 30,
      "BulkOperationTimeoutSeconds": 300,
      "ConnectionTimeoutSeconds": 10
    },
    "Caching": {
      "EnableCaching": true,
      "DefaultCacheDurationMinutes": 15,
      "MaxCacheSizeMb": 100,
      "EnableCompression": true,
      "CacheKeyPrefix": "CAExporter"
    },
    "GraphApi": {
      "ApiVersion": "v1.0",
      "EnableBatchRequests": true,
      "MaxBatchSize": 20,
      "EnableRequestDeduplication": true,
      "DeduplicationWindowSeconds": 60,
      "EnableTelemetry": true,
      "CustomHeaders": {
        "User-Agent": "CA_Scanner/1.0.0",
        "X-ClientName": "ConditionalAccessExporter"
      }
    }
  }
}

